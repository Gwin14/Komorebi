{
  "expo": {
    "name": "Komorebi",
    "platforms": ["ios", "android"],
    "slug": "Komorebi",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/images/logo.jpeg",
    "scheme": "camera",
    "userInterfaceStyle": "automatic",
    "newArchEnabled": true,
    "ios": {
      "bundleIdentifier": "br.dev.fabiosantos.komorebi",
      "supportsTablet": true,
      "infoPlist": {
        "LSRequiresIPhoneOS": true,
        "UIRequiredDeviceCapabilities": ["camera"]
      }
    },
    "android": {
      "adaptiveIcon": {
        "backgroundColor": "#E6F4FE",
        "foregroundImage": "./assets/images/logo.jpeg",
        "backgroundImage": "./assets/images/logo.jpeg",
        "monochromeImage": "./assets/images/logo.jpeg"
      },
      "edgeToEdgeEnabled": true,
      "predictiveBackGestureEnabled": false,
      "permissions": [
        "android.permission.CAMERA",
        "android.permission.RECORD_AUDIO",
        "android.permission.ACCESS_COARSE_LOCATION",
        "android.permission.ACCESS_FINE_LOCATION"
      ],
      "package": "com.anonymous.camera"
    },
    "plugins": [
      "expo-router",
      [
        "expo-splash-screen",
        {
          "image": "./assets/images/icone.png",
          "resizeMode": "contain",
          "backgroundColor": "#000000"
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Permitir que o app acesse sua câmera para poder tirar fotos.",
          "microphonePermission": "Permitir que o app acesse seu microfone para gravar vídeos.",
          "recordAudioAndroid": true
        }
      ],
      "expo-asset",
      [
        "expo-location",
        {
          "locationWhenInUsePermission": "Permitir que o app acesse sua localização para adicionar GPS às fotos."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true,
      "reactCompiler": true
    }
  }
}
